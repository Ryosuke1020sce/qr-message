<h2>リンクに設定するメッセージを選んでください</h2>

<% @messages.each do |ms| %>
  <div>
    <% if @linked_ids.include?(ms.id) %>
      <!-- すでにリンク済みなら表示だけ -->
      ✔ <%= ms.to %>（リンク済み）
    <% else %>
      <!-- リンクしていないなら作成ボタン -->
      <%= button_to "リンクする: #{ms.to}",
            message_links_path(@message, linked_message_id: ms.id),
            method: :post %>
    <% end %>
  </div>
<% end %>
